# GenAI Automation Framework - Backend Configuration
# Copy this file to .env and configure your settings

# Application
DEBUG=false
HOST=127.0.0.1
PORT=8000

# Database (SQLite - Local)
DATABASE_PATH=./data/automation.db

# Ollama (Local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral:7b
OLLAMA_TIMEOUT=120

# RAG Engine
EMBEDDING_MODEL=all-MiniLM-L6-v2
FAISS_INDEX_PATH=./data/faiss_index

# Projects Storage
PROJECTS_ROOT=./projects

# MTK Connect / ADB
MTK_CONNECT_HOST=localhost
MTK_CONNECT_PORT=5037
MTK_CONNECT_TIMEOUT=10

# Automation
PLAYWRIGHT_HEADLESS=false
APPIUM_HOST=http://localhost:4723
